{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "target": "es2020",

    // We mix `import`s and `require()` calls
    "module": "preserve",

    "isolatedModules": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true
  }
}
