{
  "compilerOptions": {
    // The default in jsconfig.json
    // "allowJs": true,
    "checkJs": true,
    // The default in jsconfig.json
    // "noEmit": true,

    "target": "es2020",

    // We mix `import`s and `require()` calls
    "module": "preserve",

    "strict": true,
    "isolatedModules": true,
    // The default in jsconfig.json
    // "resolveJsonModule": true,
    "noImplicitOverride": true,
    "strictPropertyInitialization": false,
    "noUncheckedSideEffectImports": true,
    // The default in jsconfig.json
    // "skipLibCheck": true,
    "moduleDetection": "force"
  }
}
