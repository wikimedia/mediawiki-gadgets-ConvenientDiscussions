{
  "extends": "./jsconfig-base.json",
  "compilerOptions": {
    "target": "es2020",

    // We mix `import`s and `require()` calls
    "module": "preserve",

    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["oojs", "oojs-ui", "jquery", "jqueryui", "prompts", "node"]
  },
  "include": [
    "./*.js",
    "./*.mjs",
    "./*.d.ts",
    "src/**/*",
    "tests/**/*",
    "config/**/*",
    "node_modules/types-mediawiki"
  ],
  "exclude": [
    "node_modules/**/*",
    "!node_modules/types-mediawiki",
    "dist/**/*",
    "misc/**/*"
  ]
}
